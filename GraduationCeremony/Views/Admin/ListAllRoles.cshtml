@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All roles";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-rbs5VqAATt9l5aV1I3MIJ7OnIWrOHUcWf4b5Zl5I9iP2jA/N9l3J+8bI5dR6pJW" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://kit.fontawesome.com/1269185472.js" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">@ViewData["Title"]</h1>

        @if (Model.Any())
        {
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th><h5>Role</h5></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td class="text-center">
                                <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary btn-sm"><i class="far fa-edit"></i></a>
                                <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5 class="text-center">No roles yet, use the button above to add your first role.</h5>
        }
    </div>

    <a class="btn btn-success btn-primary mb-2" asp-action="AddRole"><i class="fas fa-users"></i> Add Role</a>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-GLhlTQ8iKz6sXFfW5K1zj5FpPKiKJr5A8abwE8CvHtK8R8E5Rol5Og1mFExZfZD" crossorigin="anonymous"></script>
</body>
</html>
