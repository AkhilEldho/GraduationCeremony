@model GraduationCeremony.ViewModel.AddRoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h1 style="font-family:verdana; color:darkseagreen">Add Role</h1>

<form asp-action="AddRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
        <div>
            <input asp-for="RoleName" class="form-control" placeholder="Name" required/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group col-4">

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" style="display:block" id="errorMessage">@ViewBag.ErrorMessage</div>
        }

        <button type="submit" class="btn btn-success btn-primary">Add Role</button>
        <div>
            <a asp-action="ListAllRoles" class="btn btn-secondary my-3"><i class="fa-solid fa-angles-left"></i> Back</a>
        </div>
    </div>
</form>
