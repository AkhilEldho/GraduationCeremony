@{
    ViewData["Title"] = "Import";
}

<style>
    label {
        font-size: 1.5rem;
        color: #d9534f;
        display: block;
        margin-bottom: 10px;
        text-align: left;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        padding: 20px;
        text-align: center;
        margin: 0 auto;
        max-width: 800px;
    }

    .form-group {
        width: 100%;
        max-width: 600px;
        margin-bottom: 20px;
    }

    .file-input {
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .submit-button {
        background-color: #5bc0de;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 15px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }

        .submit-button:hover {
            background-color: #31b0d5;
        }

    .btn-secondary {
        display: inline-block;
        margin: 10px 0;
        width: 100%;
        max-width: 300px;
    }

    .alert {
        font-size: 16px;
        margin-top: 20px;
        border-radius: 5px;
    }

    .error-list li {
        font-size: 14px;
    }
</style>

<div class="container form-container">
    <form asp-action="Upload" asp-controller="Home" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Select Excel File:</label>
            <input type="file" name="file" id="file" class="form-control file-input" />
        </div>
        <button type="submit" class="btn btn-primary submit-button">Import Excel</button>
    </form>

    <a href="#" onclick="confirmDelete('Check')" class="btn btn-secondary">Delete All Checked In Graduands</a>
    <a href="#" onclick="confirmDelete('Graduand')" class="btn btn-secondary">Delete All Graduands</a>
    <a href="#" onclick="confirmDelete('Everything')" class="btn btn-secondary">Delete Everything</a>

    <script>
        function confirmDelete(text) {
            var confirmation = confirm("Are you sure you want to delete " + text + "?");

            if (confirmation) {
                window.location.href = "/Home/Delete?text=" + text;
            }
        }
    </script>

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success success-message">@ViewBag.SuccessMessage</div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger error-message">@ViewBag.ErrorMessage</div>
    }

    @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
    {
        <div class="alert alert-danger error-message">
            <h4 class="error-heading">Error/s:</h4>
            <ul class="error-list">
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    @if (ViewBag.AwardError != null)
    {
        <div class="alert alert-danger error-message">@ViewBag.AwardError</div>
    }
</div>
