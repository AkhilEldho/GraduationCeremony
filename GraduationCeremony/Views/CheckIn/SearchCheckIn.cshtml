@model IEnumerable<GraduationCeremony.Models.DB.Graduation>

@{
    ViewData["Title"] = "SearchCheckIn";
}

<h1>Search</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Forenames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nsn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwardCode)
            </th>
