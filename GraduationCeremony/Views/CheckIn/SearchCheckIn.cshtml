@model IEnumerable<GraduationCeremony.Models.DB.CheckIn>

@{
    ViewData["Title"] = "SearchCheckIn";
}

<h1>SearchCheckIn</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forenames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nsn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwardCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualificationCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwardDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CollegeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forenames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nsn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualificationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollegeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                <!-- https://stackoverflow.com/questions/30020892/taghelper-for-passing-route-values-as-part-of-a-link -->
                <a asp-controller="CheckIn" asp-action="checkIn" asp-route-PersonCode="@item.PersonCode" class="btn btn-primary">Check In</a>         
                <div class="alert alert-danger">@item.PersonCode</div>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.PersonCode">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

