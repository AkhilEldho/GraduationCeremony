@model GraduationCeremony.Models.DB.CheckIn

@{
    ViewData["Title"] = "CheckIn";
}

<style>
    h1 {
        color: #d9534f;
    }

    .custom-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    .primary-message {
        background-color: #dff0d8;
        color: #3c763d;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    hr {
        border-top: 1px solid #ccc;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .btn-secondary {
        background-color: #d9534f;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 15px 30px;
        font-size: 16px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #c9302c;
        }
</style>

<div class="container custom-container mt-4">
    <h1 class="display-4 text-center mb-4">Check-In Information</h1>

    <div class="alert alert-success primary-message">
        <h4w><strong>Order Number:</strong> @Model.GraduandAwardId</h4w>
    </div>

    <hr />

    <div class="row mb-3">
        <div class="col-sm-3 font-weight-bold">
            Forenames:
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.Forenames)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3 font-weight-bold">
            Surname:
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.Surname)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3 font-weight-bold">
            Pronunciation:
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.Pronunciation)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3 font-weight-bold">
            Person Code:
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.GraduandAward.PersonCode)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3 font-weight-bold">
            Level:
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.Level)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3 font-weight-bold">
            Award Description:
        </div>
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.AwardDescription)
        </div>
    </div>

    <!-- Add styling for additional models here -->

    <div class="row mt-3">
        <div class="col-sm-12 text-center">
            <a asp-action="Index" class="btn btn-secondary">Home</a>
        </div>
    </div>
</div>
