<div class="container mb-4">
    <div class="row justify-content-center">
        <form id="account" method="post" class="col-lg-6 mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-body px-4 py-5 px-md-5">
                    <!-- Email input -->
                    <div style="text-align:left;"> <label asp-for="Input.Email" class="form-label"></label> </div>
                    <div class="form-outline mb-4">
                        <div class="input-group">

                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-envelope icons"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="sample@mit.co.nz" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>


                    <!-- Password input -->
                    <div style="text-align:left;"> <label asp-for="Input.Password" class="form-label" style="text-align:left;"></label></div>
                        <div class="form-outline mb-4">
           
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-lock icons"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="gradapp2023" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Checkbox and Forgot Password link -->
                    <div class="form-group d-flex justify-content-between align-items-center mb-4 mt-3">
                        <div class="form-check">
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                <input class="form-check-input custom-checkbox" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: #D3514D; text-decoration: underline">Forgot your password?</a>
                    </div>

                    <!-- Submit button -->
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-lg btn-success" style="border-radius: 20px; width: 50%;">Log in</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


